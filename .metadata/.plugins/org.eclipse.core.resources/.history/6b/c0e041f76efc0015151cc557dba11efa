

#include <stdio.h>

void checkCommonDivisor()
{
	int A, B;
	printf("Insert numbers A and B: ");
	fflush(stdout);
	scanf("%d %d", &A, &B);

	if(A % B == 0 || B % A == 0)
		printf("YES!\n");
	else
		printf("NO!\n");

}
void checkTriangle()
{
	int sideA, sideB, sideC;
	printf("Insert three sides A, B and C: ");
	fflush(stdout);
	scanf("%d %d %d", &sideA, &sideB, &sideC);

	if(sideA < sideB+sideC && sideB < sideA+sideC && sideC < sideA+sideB)
		printf("YES!\n");
	else
		printf("NO!\n");
}
void calculateFee()
{
	int hour, min, age;
	printf("Insert time(hour and min), and your age: ");
	fflush(stdout);
	scanf("%d %d %d", &hour, &min, &age);

	if(age > 12 && age < 65)
		if(hour > 9 && min >= 0 && hour < 18 && min < 60)
			printf("34000 won\n");
		else
			printf("10000 won\n");
	else
		if(hour > 9 && min >= 0 && hour < 18 && min < 60)
			printf("25000 won\n");
		else
			printf("10000 won\n");

}
void calculateTax()
{
	int income;
	printf("Insert your income: ");
	fflush(stdout);
	scanf("%d" , &income);

	if(income >= 150000000)
		printf("%f", income*(0.38));

	else if(income >= 88000000)
		printf("%f", income*(0.35));

	else if(income >= 46000000)
		printf("%f", income*(0.24));

	else if(income >= 12000000)
		printf("%f", income*(0.15));

	else
		printf("%f", income*(0.38));
}
