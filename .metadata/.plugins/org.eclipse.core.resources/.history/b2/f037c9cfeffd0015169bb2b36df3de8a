void calculateOverlapRect()
{
	int x1,x2,x3,x4;
	int y1,y2,y3,y4;
	int width, height;
	int area;

	printf("Insert two rectangles: ");
	fflush(stdout);
	scanf("%d %d %d %d %d %d %d %d", &x1, &y1, &x2, &y2, &x3, &y3, &x4, &y4);

	if(x2 <= x3)
		width = 0;
	else if(x1 < x3 && x3 < x2 && x2 <= x4)
		width = x2 - x3;
	else if(x3 <= x1 && x1 < x4 && x4 < x2)
		width = x4 - x1;
	else if(x1 <= x3 && x4 <= x2)
		width = x4 - x3;
	else if(x3 <= x1 && x2 <= x4)
		width = x2 - x1;

	if(y2 <= y3)
		height = 0;
	else if(y1 < y3 && y3 < y2 && y2 <= y4)
		height = y2 - y3;
	else if(y3 <= y1 && y1 < y4 && y4 < y2)
		height = y4 - y1;
	else if(y1 <= y3 && y4 <= y2)
		height = y4 - y3;
	else if(y3 <= y1 && y2 <= y4)
			height = y2 - y1;

	area = width*height;
	printf("x1: %d x2: %d x3: %d x4: %d\n", x1,x2,x3,x4);
	printf("y1: %d y2: %d y3: %d y4: %d\n", y1,y2,y3,y4);
	printf("width: %d\n" , width);
	printf("height: %d\n" , height);
	printf("Area: %d\n" , area);


}

